<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#5C2B06"
                android:gravity="bottom"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- "Halo" Text -->
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Halo"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <!-- Horizontal Layout for User Name and Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- User Name -->
                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="The Abidin"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <!-- Date Time -->
                    <TextView
                        android:id="@+id/dateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Senin, 12 Des 2024"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>

            <!-- Form -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="30dp">

                <!-- Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Booking Data"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Order Name -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Order Name"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/orderName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#20402105"
                    android:padding="10dp"
                    android:text="ahmad" />

                <!-- Band Name -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Band Name"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/bandName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#20402105"
                    android:padding="10dp"
                    android:text="The Bandset" />

                <!-- Note -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Note"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#20402105"
                    android:padding="10dp"
                    android:text="Manis" />

                <!-- Time to Play -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Time to Play"
                        android:textSize="18sp" />

                    <!-- Minus Button -->
                    <Button
                        android:id="@+id/minusButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="12dp"
                        android:backgroundTint="#BE9168"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:padding="0dp"
                        android:text="-"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <!-- Hours -->
                    <TextView
                        android:id="@+id/totalTimeTextBooking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1" />

                    <!-- Plus Button -->
                    <Button
                        android:id="@+id/plusButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="12dp"
                        android:backgroundTint="#BE9168"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:padding="0dp"
                        android:text="+"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hours" />

                </LinearLayout>

            </LinearLayout>

            <!-- Continue Button -->
            <Button
                android:id="@+id/continueButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:backgroundTint="#402105"
                android:textColor="@color/white"
                android:text="continue Rp100 000" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
